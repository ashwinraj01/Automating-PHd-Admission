<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddCourse.AddCourse"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="9dp"
        android:background="@drawable/round_corner_template"
        >
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the name of the course:"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black">

        </TextView>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/InputCourseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Enter Course Name"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="#57000000"
            tools:ignore="TouchTargetSizeCheck" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the department of the course:"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black">

        </TextView>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/InputCourseDepartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/black"
            tools:ignore="TouchTargetSizeCheck"
            android:layout_gravity="center"
            android:textColorHint="#57000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Enter Course Department"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the duration of the course:"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp">

        </TextView>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/InputCourseDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/black"

            tools:ignore="TouchTargetSizeCheck"
            android:textColorHint="#57000000"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Enter Course Duration"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the outcome of the course:"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textColor="@color/black">

        </TextView>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/InputCourseOutcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:textColor="@color/black"
            tools:ignore="TouchTargetSizeCheck"
            android:layout_gravity="center"
            android:textColorHint="#57000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Enter Course OutCome"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the syllabus of the course:"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textColor="@color/black">

        </TextView>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/InputCourseSyllabus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            tools:ignore="TouchTargetSizeCheck"
            android:layout_gravity="center"
            android:textColorHint="#57000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:inputType="textMultiLine"
            android:hint="Enter Course Syllabus"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the campus of the course:"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textColor="@color/black">

        </TextView>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/InputCourseCampus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/black"
            tools:ignore="TouchTargetSizeCheck"
            android:textColorHint="#57000000"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Enter Course Campus"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the qualifying percentile of the course:"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black">

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10th (%) :"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp">
            </TextView>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/InputCourse10th"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#57000000"
                android:inputType="numberSigned"
                android:textColor="@color/black"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Eg:77%"/>
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12th (%) :"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp">
            </TextView>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/InputCourse12th"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Eg:77%"
                android:inputType="numberSigned"
                android:textColor="@color/black"
                android:textColorHint="#57000000"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UG (CGPA) :"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp">
            </TextView>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/InputCourseUG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Eg:8.7"
                android:inputType="numberSigned"
                android:textColor="@color/black"
                android:textColorHint="#57000000"
                tools:ignore="TouchTargetSizeCheck" />
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PG (CGPA) :"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp">
            </TextView>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/InputCoursePG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Eg:8.9"
                android:inputType="numberSigned"
                android:textColor="@color/black"
                android:textColorHint="#57000000"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>
        <Button
            android:id="@+id/AddCourserBtn"
            android:layout_width="130dp"
            android:layout_height="63dp"
            android:backgroundTint="#AF37A3"
            android:text="Register"
            android:textColor="@color/white"
            android:layout_marginLeft="130dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.853" />

        <ProgressBar
            android:id="@+id/progressBarAddCourse"
            style="?android:attr/progressBarStyle"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="10dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.433" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp">

        </TextView>

    </LinearLayout>

</ScrollView>